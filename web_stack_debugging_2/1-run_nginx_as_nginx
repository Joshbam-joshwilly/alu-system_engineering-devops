#!/bin/bash

# Create the necessary directories with correct permissions
mkdir -p /var/cache/nginx/client_temp
chown -R nginx:nginx /var/cache/nginx

# Create the PID directory with correct permissions
mkdir -p /var/run/nginx
chown -R nginx:nginx /var/run/nginx

# Copy the custom Nginx configuration file
cat <<EOL > /etc/nginx/nginx.conf
user nginx;
worker_processes auto;

events {
    worker_connections 1024;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    log_format main '\$remote_addr - \$remote_user [\$time_local] "\$request" '
                      '\$status \$body_bytes_sent "\$http_referer" '
                      '"\$http_user_agent" "\$http_x_forwarded_for"';

    access_log /var/log/nginx/access.log main;
    error_log /var/log/nginx/error.log;

    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    include /etc/nginx/conf.d/*.conf;

    server {
        listen 8080;
        server_name _;

        location / {
            root /usr/share/nginx/html;
            index index.html index.htm;
        }
    }
}

# Specify the location for the PID file outside the http block
pid /var/cache/nginx/nginx.pid;
EOL

# Run Nginx as the nginx user
exec gosu nginx nginx -g 'daemon off;'

