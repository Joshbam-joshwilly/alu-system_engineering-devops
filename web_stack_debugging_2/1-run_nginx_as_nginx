#!/bin/bash
# Set the nginx user in the nginx configuration
sed -i 's/#user www-data;/user nginx;/' /etc/nginx/nginx.conf
# Update the default server block to listen on port 8080
sed -i 's/listen 80;/listen 8080;/g' /etc/nginx/sites-available/default
# Test the nginx configuration
nginx -t
# If the configuration test is successful, restart nginx
if [ $? -eq 0 ]; then
    service nginx restart
    echo "Nginx has been configured to listen on port 8080."
else
    echo "Nginx configuration test failed. Please check the configuration."
fi
